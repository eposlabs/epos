{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://epos.dev/schema.json",
  "title": "epos.json",

  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": { "$ref": "#/definitions/Name" },
    "slug": { "$ref": "#/definitions/Slug" },
    "version": { "$ref": "#/definitions/Version" },
    "description": { "$ref": "#/definitions/Description" },
    "icon": { "$ref": "#/definitions/Icon" },
    "action": { "$ref": "#/definitions/Action" },
    "popup": { "$ref": "#/definitions/Popup" },
    "config": { "$ref": "#/definitions/Config" },
    "assets": { "$ref": "#/definitions/Assets" },
    "targets": { "$ref": "#/definitions/Targets" },
    "matches": { "$ref": "#/definitions/Matches" },
    "load": { "$ref": "#/definitions/Resources" },
    "permissions": { "$ref": "#/definitions/Permissions" },
    "manifest": { "$ref": "#/definitions/Manifest" }
  },
  "required": ["name"],
  "additionalProperties": false,

  "definitions": {
    "Name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 45
    },

    "Slug": {
      "type": "string",
      "minLength": 2,
      "maxLength": 45,
      "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$"
    },

    "Version": {
      "type": "string",
      "pattern": "^(?:\\d{1,5}\\.){0,3}\\d{1,5}$"
    },

    "Description": {
      "type": "string",
      "maxLength": 132
    },

    "Icon": {
      "type": "string"
    },

    "Action": {
      "oneOf": [{ "type": "null" }, { "type": "string" }, { "type": "boolean" }]
    },

    "Popup": {
      "type": "object",
      "properties": {
        "width": { "type": "number", "minimum": 150, "maximum": 800, "default": 380 },
        "height": { "type": "number", "minimum": 150, "maximum": 568, "default": 568 }
      },
      "additionalProperties": false
    },

    "Config": {
      "type": "object",
      "properties": {
        "access": { "type": "array", "items": { "$ref": "#/definitions/Access" }, "default": [] },
        "preloadAssets": { "type": "boolean", "default": true },
        "allowMissingModels": { "type": "boolean", "default": false }
      },
      "additionalProperties": false
    },

    "Access": {
      "type": "string",
      "enum": ["projects", "engine"]
    },

    "Assets": {
      "type": "array",
      "items": { "type": "string" }
    },

    "Targets": {
      "type": "array",
      "items": { "$ref": "#/definitions/Target" }
    },

    "Target": {
      "type": "object",
      "properties": {
        "matches": { "$ref": "#/definitions/Matches" },
        "load": { "$ref": "#/definitions/Resources" }
      },
      "additionalProperties": false
    },

    "Matches": {
      "oneOf": [
        { "$ref": "#/definitions/Match" },
        { "type": "array", "items": { "$ref": "#/definitions/Match" } }
      ]
    },

    "Match": {
      "type": "string"
    },

    "Resources": {
      "oneOf": [
        { "$ref": "#/definitions/Resource" },
        { "type": "array", "items": { "$ref": "#/definitions/Resource" } }
      ]
    },

    "Resource": {
      "type": "string",
      "pattern": "^.*\\.(css|js|[^.]+)$"
    },

    "Permissions": {
      "type": "array",
      "items": { "$ref": "#/definitions/Permission" }
    },

    "Permission": {
      "type": "string",
      "enum": [
        "background",
        "browsingData",
        "contextMenus",
        "cookies",
        "downloads",
        "notifications",
        "storage",
        "optional:background",
        "optional:browsingData",
        "optional:contextMenus",
        "optional:cookies",
        "optional:downloads",
        "optional:notifications",
        "optional:storage"
      ]
    },

    "Manifest": {
      "type": "object"
    }
  }
}
