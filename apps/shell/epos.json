{
  "$schema": "https://epos.dev/schema.json",
  "name": "[epos]",
  "slug": "epos-shell",
  "version": "1.8",
  "description": "Build web extensions.",
  "config": { "allowProjectsApi": true, "allowMissingModels": true },
  "assets": ["public/icon.svg", "public/icon.png"],

  "matches": ["https://app.epos.dev/*", "https://epos.dev/@learn"],
  "load": ["public/jetbrains-mono.css", "dist/gl.css", "dist/gl.js"],

  // Override manifest to include `<all_urls>` and `sidePanel` permissions
  "manifest": {
    "host_permissions": ["<all_urls>"],
    "permissions": [
      "background",
      "browsingData",
      "contextMenus",
      "cookies",
      "downloads",
      "notifications",
      "sidePanel",
      "storage"
    ]
  }
}
