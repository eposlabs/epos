    ".": {
      "import": "./dist/index.js"
    },
    "./unit": {
      "import": "./dist/unit/index.js"
    },
    "./utils": {
      "import": "./dist/utils/index.js"
    },
    "./types": {
      "import": "./dist/types/index.js"
    }
  },
  "files": [
    "dist",
    "bin.js"
  ],
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "c12": "^3.2.0",
    "chalk": "^5.5.0",
