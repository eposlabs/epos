{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://epos.dev/schema.json",
  "title": "epos.json",

  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": { "$ref": "#/definitions/Name" },
    "icon": { "$ref": "#/definitions/Icon" },
    "title": { "$ref": "#/definitions/Title" },
    "description": { "$ref": "#/definitions/Description" },
    "version": { "$ref": "#/definitions/Version" },
    "action": { "$ref": "#/definitions/Action" },
    "popup": { "$ref": "#/definitions/Popup" },
    "assets": { "$ref": "#/definitions/Assets" },
    "targets": { "$ref": "#/definitions/Targets" },
    "matches": { "$ref": "#/definitions/Matches" },
    "load": { "$ref": "#/definitions/Load" },
    "mode": { "$ref": "#/definitions/Mode" },
    "manifest": { "$ref": "#/definitions/Manifest" }
  },
  "required": ["name"],
  "additionalProperties": false,

  "definitions": {
    "Name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 45,
      "pattern": "^[a-z0-9\\-]+$"
    },

    "Icon": {
      "type": "string"
    },

    "Title": {
      "type": "string",
      "maxLength": 45
    },

    "Description": {
      "type": "string",
      "description": "A plain text description of the extension",
      "maxLength": 132
    },

    "Version": {
      "type": "string",
      "pattern": "^(?:\\d{1,5}\\.){0,3}\\d{1,5}$"
    },

    "Action": {
      "oneOf": [{ "type": "null" }, { "type": "string" }, { "type": "boolean" }]
    },

    "Popup": {
      "type": "object",
      "properties": {
        "width": { "type": "number", "minimum": 150, "maximum": 800, "default": 400 },
        "height": { "type": "number", "minimum": 150, "maximum": 600, "default": 600 }
      },
      "additionalProperties": false
    },

    "Assets": {
      "type": "array",
      "items": { "type": "string" }
    },

    "Targets": {
      "type": "array",
      "items": { "$ref": "#/definitions/Target" }
    },

    "Target": {
      "type": "object",
      "properties": {
        "matches": { "$ref": "#/definitions/Matches" },
        "load": { "$ref": "#/definitions/Load" },
        "mode": { "$ref": "#/definitions/Mode" }
      },
      "additionalProperties": false
    },

    "Matches": {
      "oneOf": [
        { "$ref": "#/definitions/Pattern" },
        { "type": "array", "items": { "$ref": "#/definitions/Pattern" } }
      ]
    },

    "Pattern": {
      "type": "string"
    },

    "Load": {
      "oneOf": [
        { "$ref": "#/definitions/LoadItem" },
        { "type": "array", "items": { "$ref": "#/definitions/LoadItem" } }
      ]
    },

    "LoadItem": {
      "type": "string",
      "pattern": "^.*\\.(css|js|[^.]+)$"
    },

    "Mode": {
      "type": "string",
      "enum": ["normal", "shadow", "lite"]
    },

    "Manifest": {
      "$ref": "./manifest.schema.json"
    }
  }
}
