{
  "$schema": "https://epos.dev/schema.json?v=1",
  "name": "devkit",
  "static": [
    "./public/icon.png",
    "./template/epos.json",
    "./template/package.json",
    "./template/tsconfig.json",
    "./template/vite.config.ts",
    "./template/src/app/app.gl.tsx",
    "./template/src/core/units.ts",
    "./template/src/gl.tsx",
    "./template/src/gl.css"
  ],
  "targets": [
    {
      "matches": ["<hub>"],
      "load": ["./dist/gl.js", "./dist/tw.css"]
    },
    {
      "matches": ["https://epos.dev/@learn"],
      "load": ["./dist/fg.js", "./dist/tw.css"]
    },
    {
      "matches": ["<background>"],
      "load": ["./dist/bg.js"]
    }
    // Experiments
    // {
    //   "matches": ["https://epos.dev/@exp"],
    //   "load": ["./dist/exp.js", "./dist/exp.css"]
    // }
  ]
}
