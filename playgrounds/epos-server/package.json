{
  "name": "epos-server",
  "version": "1.2.1",
  "type": "module",
  "license": "MIT",
  "author": "imkost",
  "description": "",
  "keywords": [],
  "scripts": {
    "dev": "npm run paralayer:watch & node --watch ./src/entry/entry.ts",
    "start": "npm run paralayer:build && node ./src/entry/entry.ts",
    "paralayer:watch": "paralayer --watch --default gl --globalize ./src/app ./src/layers",
    "paralayer:build": "paralayer --default gl --globalize ./src/app ./src/layers",
    "lint": "tsc --noEmit",
    "release": "npm version patch && npm run release:raw",
    "release:raw": "npm run build && npm publish",
    "release:minor": "npm version minor && npm run release:raw"
  },
  "bin": {
    "epos": "./bin.js"
  },
  "files": [
    "src",
    "bin.js",
    "static"
  ],
  "dependencies": {
    "@eposlabs/utils": "^1.0.0",
    "@hono/node-server": "^1.19.0",
    "chalk": "^5.6.0",
    "epos-types": "^1.1.0",
    "file-type": "^21.0.0",
    "globby": "^14.1.0",
    "hono": "^4.9.4",
    "mime": "^4.0.7",
    "strip-json-comments": "^5.0.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.5.1",
    "@types/ws": "^8.18.1",
    "paralayer": "^1.0.0",
    "vite": "^7.1.3",
    "vite-node": "^3.2.4"
  }
}
