{
  "$schema": "https://epos.dev/schema.json",
  "name": "learn",
  "title": "[epos] Learn Browser API",
  "action": "<hub>",
  "popup": { "width": 600, "height": 400 },
  "targets": [
    {
      "matches": ["<hub>", "<popup>", "https://inssist.com/*"],
      "load": ["./fg.js", "./fg.css"],
      "mode": "shadow"
    },
    {
      "matches": "<background>",
      "load": ["./bg.js"]
    }
  ]
}
