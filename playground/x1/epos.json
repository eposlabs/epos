{
  "$schema": "https://epos.dev/schema.json",
  "name": "x1",
  "version": "0.0.1",
  "title": "X1 Test Package",
  "action": "https://epos.dev/@x1",
  "popup": { "width": 500, "height": 500 },
  "assets": ["x1.css"],
  "permissions": ["browsingData", "notifications", "optional:downloads"],
  "targets": [
    {
      "matches": "<allUrls>",
      "load": "x1.js"
    },
    {
      "matches": ["*://epos.dev/@x1"],
      "load": ["x1-hub.js"]
    },
    // {
    //   "matches": ["<allUrls>", "*://epos.dev/@x1"],
    //   "load": ["lite:x1-lite.js", "x1.js", "shadow:x1.css"]
    // },
    {
      "matches": ["frame:*://*.epos.dev/*"],
      "load": ["lite:x1-lite-2.js", "x1-frame.js"]
    },
    {
      "matches": ["<popup>"],
      "load": ["x1-popup.css", "x1-popup.js"]
    },
    {
      "matches": ["<sidePanel>"],
      "load": ["x1-popup.css", "x1-popup.js"]
    },
    {
      "matches": ["<background>"],
      "load": ["x1-bg.js"]
    }
