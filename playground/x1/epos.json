{
  "$schema": "https://epos.dev/schema.json",
  "name": "Test Project x1",
  "slug": "x1",
  "version": "0.0.1",
  "action": "https://epos.dev/@x1",
  "popup": { "width": 500, "height": 500 },
  "permissions": ["contextMenus", "optional:browsingData", "optional:notifications", "optional:downloads"],

  "targets": [
    {
      "matches": ["*://*.epos.dev/@x1", "<popup>"],
      "load": ["x1-hub.js"]
    },
    {
      "matches": "frame:*://*.epos.dev/@x1",
      "load": ["x1-hub.js"]
    }
    // { "matches": ["<allUrls>"], "load": ["x1.js"] },
    // { "matches": ["*://epos.dev/@x1"], "load": ["x1-hub.js"] },
    // { "matches": ["frame:*://*.epos.dev/*"], "load": ["lite:x1-lite-2.js", "x1-frame.js"] },
    // { "matches": ["<popup>"], "load": ["x1-popup.css", "x1-popup.js"] },
    // { "matches": ["<sidePanel>"], "load": ["x1-popup.css", "x1-popup.js"] },
    // { "matches": ["<background>"], "load": ["x1-bg.js"] }
  ],

  "manifest": {
    "optional_host_permissions": ["*://*.fbcdn.com/*"]
  }
}
