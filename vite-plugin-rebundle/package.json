{
  "name": "vite-plugin-rebundle",
  "version": "1.3.3",
  "type": "module",
  "license": "MIT",
  "author": "imkost",
  "description": "Vite plugin that forces single-file output per entry. Ensures each entry point is bundled into a standalone file without code-splitting.",
  "keywords": [
    "vite",
    "vite-plugin"
  ],
  "scripts": {
    "build": "tsup src --format esm --dts --clean --no-splitting",
    "lint": "tsc --noEmit",
    "release": "sh -c 'npm version ${1:-patch} && npm run build && npm publish' --"
  },
  "exports": {
    ".": {
      "import": "./dist/rebundle.js"
    },
    "./ts": {
      "import": "./src/rebundle.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "@eposlabs/utils": "^1.2.0",
    "@types/ws": "^8.18.1",
    "chalk": "^5.6.2",
    "filesize": "^11.0.13",
    "portfinder": "^1.0.38",
    "rolldown": "^1.0.0-beta.40",
    "rollup": "^4.52.3",
    "vite": "^7.1.7",
    "ws": "^8.18.3"
  }
}
