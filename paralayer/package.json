{
  "name": "paralayer",
  "version": "1.9.0",
  "type": "module",
  "license": "MIT",
  "author": "imkost",
  "description": "",
  "keywords": [
    "vite",
    "vite-plugin"
  ],
  "scripts": {
    "dev": "tsup src --dts --format esm --out-dir dist --clean --watch",
    "build": "tsup src --dts --format esm --out-dir dist --clean",
    "lint": "tsc --noEmit",
    "release": "sh -c 'npm version ${1:-minor} && npm run build && npm publish' --"
  },
  "bin": {
    "paralayer": "./src/bin.js"
  },
  "exports": {
    ".": {
      "source": "./src/paralayer.ts",
      "import": "./dist/paralayer.js",
      "types": "./dist/paralayer.d.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "@eposlabs/utils": "^1.10.0",
    "chokidar": "^4.0.3",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5"
  }
}
