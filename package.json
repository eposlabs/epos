{
  "name": "eposlabs-epos",
  "version": "*",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "edge": "ncu --upgrade --deep && npm install",
    "lint": "npm run lint -w apps -w packages",
    "prettier": "prettier --write ./",
    "release": "node scripts/release.ts",
    "reinstall": "npx rimraf node_modules/ **/node_modules/ package-lock.json && npm install"
  },
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20260124.1",
    "npm-check-updates": "^19.3.1",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2",
    "syncpack": "^13.0.4"
  },
  "overrides": {
    "vite": "^8.0.0-beta.0"
  }
}
