{
  "private": true,
  "name": "epos-mono",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "edge": "ncu --upgrade --deep",
    "prettier": "prettier --write ./",
    "release": "npm run release:epos && npm run release:epos-unit && npm run release:utils && npm run release:rebundle && npm run release:paralayer",
    "release:epos": "npm -w epos run release",
    "release:epos-unit": "npm -w epos-unit run release",
    "release:utils": "npm -w @eposlabs/utils run release",
    "release:rebundle": "npm -w vite-plugin-rebundle run release",
    "release:paralayer": "npm -w paralayer run release"
  },
  "devDependencies": {
    "lightningcss": "^1.30.2",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.7.4",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
