{
  "name": "eposlabs-epos",
  "version": "*",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "edge": "ncu --upgrade --deep && npm install",
    "lint": "npm -w apps -w packages run lint",
    "prettier": "prettier --write ./",
    "reinstall": "rimraf node_modules/ **/node_modules/ package-lock.json && npm install"
  },
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20260113.1",
    "lightningcss": "^1.30.2",
    "npm-check-updates": "^19.3.1",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2"
  }
}
