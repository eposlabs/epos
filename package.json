{
  "private": true,
  "name": "epos-mono",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "*"
  ],
  "scripts": {
    "edge": "ncu --upgrade --deep",
    "prettier": "prettier --write ./",
    "build": "npm run build:epos && npm run build:epos-unit && npm run build:utils && npm run build:rebundle && npm run build:paralayer",
    "release": "npm run release:epos && npm run release:epos-unit && npm run release:utils && npm run release:rebundle && npm run release:paralayer",
    "$": "-------------------------------------------------",
    "build:epos": "npm -w epos run build",
    "build:epos-unit": "npm -w epos-unit run build",
    "build:utils": "npm -w @eposlabs/utils run build",
    "build:rebundle": "npm -w vite-plugin-rebundle run build",
    "build:paralayer": "npm -w paralayer run build",
    "release:epos": "npm -w epos run release",
    "release:epos-unit": "npm -w epos-unit run release",
    "release:utils": "npm -w @eposlabs/utils run release",
    "release:rebundle": "npm -w vite-plugin-rebundle run release",
    "release:paralayer": "npm -w paralayer run release"
  },
  "devDependencies": {
    "lightningcss": "^1.30.2",
    "npm-check-updates": "^19.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
